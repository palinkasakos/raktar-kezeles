<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.palinkas.raktar.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:theme="@style/Theme.Raktar">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navigate_storage_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storage_in_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/navigate_storage_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storage_out_button"
            app:layout_constraintTop_toBottomOf="@id/navigate_storage_in_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>