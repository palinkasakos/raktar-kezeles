<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.palinkas.raktar.ui.deliveryNoteIn.DeliveryNoteInFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_delivery_note_in" />

    <fragment
        android:id="@+id/nav_products"
        android:name="com.palinkas.raktar.ui.product.ProductListFragment"
        android:label="@string/menu_products"
        tools:layout="@layout/fragment_product_list">
        <action
            android:id="@+id/action_nav_products_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.palinkas.raktar.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.palinkas.raktar.ui.product_detail.ProductDetailFragment"
        android:label="@string/product_fragment"
        tools:layout="@layout/fragment_product_detail">
        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>
</navigation>